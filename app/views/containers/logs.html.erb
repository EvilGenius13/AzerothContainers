<div class="flex justify-center items-center mt-6">
  <div class="w-full max-w-4xl overflow-x-auto relative shadow-md sm:rounded-lg bg-white dark:bg-gray-800 p-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white mb-4">Container Logs</h3>
    <div class="max-h-96 overflow-y-auto bg-gray-50 dark:bg-gray-900 p-4 rounded-lg">
      <ul class="list-disc space-y-2 pl-5">
        <% @logs.each do |log_entry| %>
          <li class="text-sm text-gray-500 dark:text-gray-400 font-mono">
            <%= log_entry %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
