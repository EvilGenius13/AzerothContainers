<div class="ml-64 p-10">
  <%= form_with(model: container_form, url: containers_path, local: true, class: "w-full max-w-lg") do |form| %>
    <% flash.each do |type, message| %>
      <div class="<%= type %>"><%= message %></div>
    <% end %>
    <% if container_form.errors.any? %>
      <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700">
        <h2><%= pluralize(container_form.errors.count, "error") %> prohibited this container from being saved:</h2>

        <ul>
          <% container_form.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <%= form.label :image, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= form.text_field :image, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder: "Docker Image" %>
      </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <%= form.label :name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= form.text_field :name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder: "Container Name" %>
      </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <%= form.label :container_port, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= form.text_field :exposed_ports, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder: "Container Port" %>
      </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <%= form.label :external_port, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <%= form.text_field :port_bindings, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", placeholder: "External Port" %>
      </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <%= form.label :always_pull, "Always Pull Image", class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
        <div class="mt-2">
          <%= radio_button_tag 'container_form[always_pull]', 'true', false, class: "mr-2" %>
          <%= label_tag 'container_form_always_pull_true', 'On', class: "mr-4" %>
          <%= radio_button_tag 'container_form[always_pull]', 'false', true, class: "mr-2" %>
          <%= label_tag 'container_form_always_pull_false', 'Off' %>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap -mx-3 mt-6">
      <div class="w-full px-3">
        <%= form.submit "Deploy Container", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    </div>
  <% end %>
</div>
