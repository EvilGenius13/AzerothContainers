<div>
  <%= image_tag 'logo-large.webp', alt: 'AC Logo', class: 'border-2 border-gray-300 rounded', style: 'width: 256px; height: 256px;' %>


  <h1 class="font-bold text-4xl">Dashboard</h1>
  <ul>
    <li>Containers: <%= @info['Containers'] %></li>
    <li>Images: <%= @info['Images'] %></li>
    <li>CPUS: <%= @info['NCPU'] %></li>
    <li>Memory <%= (@info['MemTotal'].to_f / 2**30).round(2) %> GiB</li>
    <li>OS: <%= @info['OperatingSystem'] %></li>
  </ul>
</div>
